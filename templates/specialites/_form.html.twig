{% extends 'base.html.twig' %}
{% block title %}Modifier Specialites
{% endblock %}

{% block content %}
	<h1>Modifier Specialites</h1>
	{# 
			{{ include('specialites/_form.html.twig') }} #}

	<a href="{{ path('app_specialites_index') }}">back to list</a>
	
	<div class="page-wrapper">

		<div class="content container-fluid">
		
			<div class="row" style="justify-content: center;">
				<div class="col-md-6">
				
	<div class="card">
	
		<div class="card-body pt-0">
			<div class="card-header">
				<h5 class="card-title">Modifier Specialite</h5>
			</div>
			{{ form_start(form) }}
				<div class="settings-form">
				
						<div class="col-md-6">
							<div class="form-group">
								<label>Nom
									<span class="star-red">*</span>
								</label>
								{{ form_widget(form.nom, {attr:{'class':'form-control'}}) }}
							</div>
					</div>
					<div class="form-group">
						<label>Description
							<span class="star-red">*</span>
						</label>
								{{ form_widget(form.description, {attr:{'class':'form-control bg-grey floating'}}) }}
					</div>
					
<div class="change-photo-btn  bg-grey">
<div>
<i class="feather-upload"></i>
</div>
								{{ form_widget(form.images, {attr:{'class':'form-control change-photo-btn  bg-grey'}}) }}
</div>

<div class="upload-file">
<h6>Uploaded files</h6>
<div class="up-img">
{# Si la route est app_specialites_edit on affiche les images #}
	{% if app.request.attributes.get('_route') == 'app_specialites_edit' %}
  
          <div class="col-sm-10">

        {% for image in  specialite.images %}
           
    
             
              
                <img src="{{ asset('/uploads/'~image.name) }}" alt="" width="150">
      

  <a class="btn edit btn-danger"  href ='{{path('image_delete_specialite',{id: image.id}) }}' ><i class="icon-trash-alt"></i></a>           
      
        {% endfor %}
  
 {% endif %}
    <button class="btn">{{ button_label|default('Save') }}</button>
</div>
<p>IMG_3892.jpg</p>
</div>
					
					<div class="col-12">
								<div class="doctor-submit text-end">
									<div class="text-right">
										{{ form_row(form.Enregistrer , {attr:{'class':'btn btn-primary save-btn'}}) }}
										

									</div>
								</div>
							</div>
				</div>
			{{ form_end(form) }}
		</div>
		<center>
	</div>
	
</div>
		
		
	</div>
	
{% endblock %}


